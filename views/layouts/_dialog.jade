#question-modal.modal(tabindex="-1", role="dialog", aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h4.modal-title New Question
      .modal-body
        form
          .form-group
            .title-box
              .notice
              textarea.q-title.form-control(name="title", rows="5")
            .topic-box
              .suggested-topics
              .added-topics
              input.search-input.form-control(type="text", placeholder="search more topics")
              .search-results
                ul
      .modal-footer
        button.btn.btn-default.cancel(type="button", data-dismiss="modal") Close
        button.btn.btn-default.prev(type="button") Back
        button.btn.btn-default.next(type="button") Next
        button.btn.btn-default.submit(type="button") Add Question
