extends ../layouts/login
block content
  header
    h1
      a(href="/", title="Tweet", alt="Tweet") Tweet
  .row.new-password
    .col-xs-offset-4.col-xs-4
      form(role="form", method='POST', action="/change-password")
        input(type="hidden", name="reset-pwd-token", value!= reset_pwd_token)
        .form-group
          label(for="password") New password
          input#password.form-control(name="password", type="password", required)
        .form-group
          label(for="password-confirm") Confirm password
          input#password-confirm.form-control(name="password-confirm", type="password", required)
        .msg-wrapper
        button.btn.btn-success(type="submit") Submit

  script(src="/javascripts/build/new_password.js")
