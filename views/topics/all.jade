extends ../layouts/simple

block content
  h2.well Manage topics
  a(href="/topics/new").btn.btn-primary.btn-xs create topic
  table.table.table-striped
    thead
      tr 
        th #
        th name
        th Manage
    tbody
      - for (var i = 0; i < topics.length; i++)
        tr
          td=i + 1
          td
            strong= topics[i].name
          td
            a(href="/topics/#{topics[i]._id}/edit").btn.btn-primary.btn-xs.pull-right edit
